# Database Configuration
# Connect to your existing PostgreSQL container on the host
# Use host.docker.internal to connect from Docker container to host
DATABASE_URL=postgresql://your_user:your_password@host.docker.internal:5432/vaibtalk?schema=public

# For local development (outside Docker)
# DATABASE_URL=postgresql://your_user:your_password@localhost:5432/vaibtalk?schema=public

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# Google OAuth (required for Google sign-in)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application Port
APP_PORT=3000

# PeerJS Server Configuration
# Note: PeerJS is NOT exposed to host in production (internal only)
# In development mode, it's exposed on port 9000
PEERJS_PORT=9000
NEXT_PUBLIC_PEER_SERVER_HOST=localhost
NEXT_PUBLIC_PEER_SERVER_PORT=9000
NEXT_PUBLIC_PEER_SERVER_PATH=/peerjs
NEXT_PUBLIC_PEER_SERVER_SECURE=false

# For production deployment (HTTPS):
# NEXTAUTH_URL=https://talk.vaibdev.com
# NEXT_PUBLIC_PEER_SERVER_HOST=talk.vaibdev.com
# NEXT_PUBLIC_PEER_SERVER_PORT=443
# NEXT_PUBLIC_PEER_SERVER_SECURE=true
# DATABASE_URL should point to your production PostgreSQL instance
